<% content_for :page_title do %>
  <%= Spree.t('.listing_pages') %>
<% end %>

<% content_for :page_actions do %>
  <div class="toolbar" data-hook="toolbar">
    <ul class="actions header-action-links inline-menu">
    <li>
      <%= button_link_to Spree.t('.new_page'), new_object_url, :icon => 'icon-plus' %>
    </li>
    </ul>
  </div>
<% end %>

<% content_for :table_filter_title do %>
  <%= Spree.t(:search) %>
<% end %>

<% content_for :table_filter do %>
  <div data-hool='admin_pages_sidebar'>

    <%= search_form_for [:admin, @search] do |f| %>
      <div data-hook="admin_pages_index_search">
        <div class="alpha nine columns">
          <div class="field">
            <%= f.label :title_cont, Spree.t('page.title') %>
            <%= f.text_field :title_cont, :size => 25 %>
          </div>
        </div>
        <div class="four columns">
          <div class="field">
            <%= f.label :path_cont, Spree.t('page.path') %>
            <%= f.text_field :path_cont, :size => 25 %>
          </div>
        </div>
      </div>

      <div class="clear"></div>

      <div class="form-buttons actions filter-actions" data-hook="admin_pages_index_search_buttons">
        <%= button Spree.t(:search), 'icon-search' %>
      </div>
    <% end %>
  </div>
<% end %>

<table class="index sortable" data-sortable-link="<%= update_positions_admin_pages_url -%>">
  <thead>
  <tr>
      <th><%= sort_link @search, :title, Spree.t("page.title") %></th>
      <th><%= sort_link @search, :path, Spree.t("page.path") %></th>
      <th><%= sort_link @search, :accessible, Spree.t("page.accessible") %></th>
      <th><%= sort_link @search, :visible, Spree.t("page.visible") %></th>
      <th><%= Spree.t("action") %></th>
  </tr>
  </thead>
  <tbody>
    <%- @collection.each do |page|%>
    <tr id="<%= spree_dom_id page %>">
      <td><span class="handle">&nbsp;</span>&nbsp; <%=link_to page.title, object_url(page) %></td>
      <td><%= page.path %></td>
      <td><%= page.accessible %></td>
      <td><%= page.visible %></td>
      <td>
        <%= link_to_with_icon 'icon-ok', Spree.t('page.preview'), page.path, :onclick => 'window.open(this.href);return false;' %> &nbsp;
        <%= link_to_with_icon 'icon-file', Spree.t('page.contents'), admin_page_contents_path(page) %> &nbsp;
        <%= link_to_edit page %> &nbsp;
        <%= link_to_delete page %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @collection %>