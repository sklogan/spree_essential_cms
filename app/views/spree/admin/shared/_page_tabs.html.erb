<% content_for :page_title do %>
  <%= (t('.editing_page') + " &ldquo;#{@page.title}&rdquo;").html_safe %>
<% end %>

<% content_for :sidebar_title do %>
  <span class="title"><%= @page.title %></span>
<% end %>


<% content_for :sidebar do %>

  <nav class="menu">
    <ul data-hook="admin_page_tabs">
      <li<%== ' class="active"' if current == Spree.t('.page_details') %>>
        <%= link_to_with_icon 'icon-edit', Spree.t('.page_details'), edit_admin_page_url(@page) %>
      </li>
      <li<%== ' class="active"' if current == 'Contents' %>>
        <%= link_to_with_icon 'icon-th-large', Spree.t('.contents'), admin_page_contents_url(@page) %>
      </li>
      <li<%== ' class="active"' if current == 'Images' %>>
        <%= link_to_with_icon 'icon-picture', Spree.t('.images'), admin_page_images_url(@page) %>
      </li>
    </ul>
  </nav>

<% end %>
