<%= render :partial => 'spree/admin/shared/page_tabs', :locals => {:current => 'Contents'} %>

<% if @content.try(:errors).present? %>
  <%= render 'spree/shared/error_messages', :target => @content %>
<% end %>

<h2><%= Spree.t('.new_content') %></h2>


<%= form_for([:admin, @page, @content], :html => { :multipart => true }) do |f| %>
  <%= render "spree/admin/shared/language_dropdown", :object => @content -%>

  <%= render "form", :form => f %>

  <p class="form-buttons">
    <%= button Spree.t("create") %> <%= Spree.t('or') %> <%= link_to Spree.t('cancel'), collection_url %>
  </p>
<% end %>

